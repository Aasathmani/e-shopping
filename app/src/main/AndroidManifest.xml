<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.aasath.aasath">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".AdminNewOrderActivity"
            android:theme="@style/Theme.Aasath.NoActionBar"
            >

        </activity>
        <activity
            android:name=".ConfirmFianlOrderActivity"
            android:theme="@style/Theme.Aasath.NoActionBar">

        </activity>
        <activity
            android:name=".CartActivity"
            android:theme="@style/Theme.Aasath.NoActionBar">

        </activity>
        <activity
            android:name=".SettingsActivity"
            android:theme="@style/Theme.Aasath.NoActionBar">

        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/Theme.Aasath.NoActionBar" />
        <activity
            android:name=".AdminCategoryActivity"
            android:theme="@style/Theme.Aasath.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.Aasath.NoActionBar">
            <intent-filter>
                <action
                    android:name="android.intent.action.MAIN"
                    android:theme="@style/Theme.Aasath.NoActionBar" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:theme="@style/Theme.Aasath.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:theme="@style/Theme.Aasath.NoActionBar" />
        <activity
            android:name=".AdminAddNewProductActivity"
            android:theme="@style/Theme.Aasath.NoActionBar" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Theme.AppCompat"
            tools:ignore="MissingClass" />
        <activity
            android:name=".ProductDetailsActivity"
            android:theme="@style/Theme.Aasath.NoActionBar" />
    </application>

</manifest>